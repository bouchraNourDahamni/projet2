{
  "extends": ["tslint:recommended", "tslint-consistent-codestyle"],
  "rules": {
    "array-type": [
      true,
      "array"
    ],
    "arrow-parens": true,
    "deprecation": true,
    "max-classes-per-file": [
      true,
      1
    ],
    "max-line-length": [
      true,
      140
    ],
    "member-access": [
      true,
      "public"
    ],
    "interface-name": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-duplicate-imports": true,
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": true,
    "no-var-keyword": true,
    "no-require-imports": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": true,
    "only-arrow-functions": true,
    "no-string-literal": false,
    "one-variable-per-declaration": true,
    "prefer-const": true,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        }
      }
    ],
    "naming-convention": [
      true,
      {"type": "default", "format": "camelCase", "leadingUnderscore": "forbid", "trailingUnderscore": "forbid"},
      {"type": "variable", "modifiers": ["global", "const"], "format": ["camelCase","UPPER_CASE"]},
      {"type": "functionVariable", "modifiers": ["export", "const"], "format": "camelCase"},
      {"type": "method", "filter": "^toJSON$", "format": null},
      {"type": "property", "modifiers": ["public", "static", "const"], "format": "UPPER_CASE"},
      {"type": "type", "format": "PascalCase"},
      {"type": "class", "modifiers": "abstract", "prefix": "Abstract"},
      {"type": "interface", "prefix": "I"},
      {"type": "genericTypeParameter", "prefix": "T"},
      {"type": "enumMember", "format": "PascalCase"}
    ]
  }
}
